<%- include('../port/layout-start', {title: title}) %>

<h1><%= title %></h1> 
<% if (!user) { %>
    <p><a class="btn btn-sm btn-primary" href="/api/users/login"> Login </a></p>
    <p><a class="btn btn-sm btn-primary" href="/api/users/signup"> Signup </a></p>
<% } else { %>
    <p>Hi, <%= user.username %>! </p>
    <p><a class="btn btn-sm btn-primary" href="/api/users/me"> Profile </a></p>
    <p><a class="btn btn-sm btn-primary" href="/api/books/"> Books </a></p>
<% } %>

<%- include('../port/layout-end') %>